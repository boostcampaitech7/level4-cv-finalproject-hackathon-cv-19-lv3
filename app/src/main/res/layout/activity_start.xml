<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="132dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/shortform_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="숏폼 챌린지 AI 코치"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="153dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="228dp"
            android:layout_height="65dp"
            app:srcCompat="@drawable/blue_logo"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="174dp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="36dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="243dp"
            android:layout_height="209dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/character_left" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/sub1_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도전하기 어려웠던 쇼츠 챌린지"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="487dp" />

        <TextView
            android:id="@+id/sub1_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI 댄스 코치 딴-따라와 함께 정복해가요!"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="508dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/start_btn"
            android:layout_width="288dp"
            android:layout_height="49dp"
            android:text="START"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="569dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/copyright_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            android:text="ⓒ 2025. 영원한종이박 All rights reserved."
            android:textSize="8sp"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="692dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </LinearLayout>

</LinearLayout>